<div class="all-books-container">
    <h2 class="book-title">Recently Added</h2>
    <ul>
        <% books.forEach(book => { %>
        <li>
            <img src="/image/<%= book.filename %>" class="img-fluid img-small" height="200" width="150"
                loading="lazy" />
            <a type="button" class="payBtn" href="/book/show/<%= book.filename %>">View Book</a>
        </li>
        <% }) %>
    </ul>

</div>